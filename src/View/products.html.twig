<body>  {# Permet d'afficher les 6 produits, à raison de 3 par ligne. Ainsi que le résultat dump() du tableau de produit. #}
    <ul>
        {% for row in products|batch(3) %}
        <li>
            {% for product in row %}
            {{ product }}
            {% endfor %}
        </li>
        {% endfor %}
    </ul>

{{ dump(products) }}

</body>

